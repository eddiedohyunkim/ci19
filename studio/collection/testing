	function delEls(){
		for ( var x = 1; x < 46; x += 1){
			var del = document.getElementsByClassName("result" + x); 
		}
		for ( var i = 0; i < del.length; i+=1 ){
				del[i].outerHTML = "";
		}
	}
}




