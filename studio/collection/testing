<script>
var button = document.createElement("input");
button.setAttribute("type","button");
button.setAttribute("value","show");
button.setAttribute("id","onoff");
button.setAttribute("onclick","onoff();");
document.body.appendChild(button);

function onoff(){
  	currentvalue = document.getElementById('onoff').value;
  	x = document.getElementById()
  	if(currentvalue == "hide"){
   		document.getElementById("onoff").value="show";

  	}else{
   		document.getElementById("onoff").value="hide";
  	}
}


var url = "https://raw.githubusercontent.com/eddiedohyunkim/ci19/master/studio/collection/lottery100.json";
fetch(url)
	.then(function(response){return response.json();})
	.then(function(json){sortData(json);})

function sortData(data) {
	console.table(data);
	// console.table(data);

	var count = 0;
	var ballrepeat = [];
	for(var balls = 0; balls < 46; balls += 1){
		for(var i = 0; i < data.length; i+= 1){
			for (var j = 0; j < 6; j+=1){
				var ballkey = "ball" + (j + 1);
				if(data[i][ballkey] == balls) {
					if(!ballrepeat[balls]) {ballrepeat[balls] = 0;}
					ballrepeat[balls] += 1;
				}
			}
		}
	}
	console.log(ballrepeat);
	var objectify = {}
	Object.assign(objectify, ballrepeat);
	console.log(objectify);
	console.log(Object.keys(objectify).length);
	console.log(objectify[1]);
	console.log(objectify[45]);

	for (var j = 0; j < Object.keys(objectify).length; j+=1){
		for (var i = 0; i < objectify[j]; i+=1){
			console.log(j);
		}
	}
	
	var total = document.createElement("div");
	document.body.appendChild(total);
	total.innerHTML = "Throughout the event " + data[0].event + " to "+ data[data.length - 1].event + " â€” from " + data[0].date + " to " + data[data.length - 1].date;	


	for( var k = 1; k < 46; k += 1){
		var on = document.createElement("button");
		on.setAttribute("id", "ball" + k + "show");
		on.innerHTML = "ball " + k + " show";
		document.body.appendChild(on);
	
		var off = document.createElement("button");
		off.setAttribute("id", "ball" + k + "hide");
		off.innerHTML = "ball " + k + " hide";
		document.body.appendChild(off);
	}

	for(var i = 1; i < 46; i += 1){
		document.getElementById( "ball" + i + "show" ).addEventListener( 'click', function () {
			var result = document.createElement("div");
			result.setAttribute("class", "result" + i);
			result.innerHTML = "ball " + i + " is repeated " + ballrepeat[i] + " times.";
			document.body.appendChild(result);
		}, false );
	
		document.getElementById( "ball" + i + "hide" ).addEventListener( 'click', function () {
			delEls();
	
		}, false );
		delEls();
	}

					// // 1
					// document.getElementById( "ball1show" ).addEventListener( 'click', function () {
